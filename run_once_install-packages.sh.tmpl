#!/bin/bash

{{- if .dev }}
	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/dev.sh)"
{{- end }}
{{- if .gui }}
	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/basic-gui.sh)"
{{- end }}
