	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/dev-gui.sh)"
{{- end }}
{{- if .writing }}
	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/writing.sh)"
{{- end }}
{{- if .media }}
	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/media.sh)"
{{- end }}
{{- if .gaming }}
	sh -c "$(curl -sSL https://zshoham.github.io/static/linux-setup/gaming.sh)"
{{- end }}		
