#!/bin/sh

BIN_PATH="$HOME/.local/bin"
SHARE_PATH="$HOME/.local/share"
LIB_PATH="$HOME/.local/lib" 
INSTALL_PATH="/tmp"

curl -L "https://sw.kovidgoyal.net/kitty/installer.sh" | sh /dev/stdin dest=$INSTALL_PATH launch=n
cp -r $INSTALL_PATH/kitty.app/bin/* $BIN_PATH
cp -r $INSTALL_PATH/kitty.app/share/* $SHARE_PATH
cp -r $INSTALL_PATH/kitty.app/lib/* $LIB_PATH

rm -r "$INSTALL_PATH/kitty.app/"
